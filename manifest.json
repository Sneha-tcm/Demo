{
  "manifest_version": 3,
  "name": "AI Form Autofill",
  "version": "1.0",
  "description": "Detect and autofill form fields using AI suggestions from Google Sheets.",
  "permissions": ["activeTab", "scripting", "storage","http://localhost:11435/"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content/sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
